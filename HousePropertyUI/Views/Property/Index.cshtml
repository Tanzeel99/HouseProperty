@model IEnumerable<HousePropertyUI.Model.DTO.Property.PropertyDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Create</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Occupancy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sqft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amenity)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Details)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Occupancy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sqft)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amenity)
                </td>
                <td class="text-center">
                    @Html.ActionLink("", "Edit", new { id = item.Id }, new { @class = "bi bi-pencil-square text-success" }) |
                    @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "bi bi-trash text-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>


<style>
    th{
        text-align:center;
    }
    thead{
        background-color:darkgray;
    }
</style>
